{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python Debugger: Sample file",
      "type": "debugpy",
      "request": "launch",
      "python": "${workspaceFolder}/.venv/bin/python",
      "program": "main.py",
      "args": [
        "-i",
        "${input:sampleFolder}",
        "--debug"
      ],
      "console": "integratedTerminal"
    }
  ],
  "inputs": [
    {
      "id": "sampleFolder",
      "type": "promptString",
      "default": "samples/1-mobile-camera",
      "description": "Path to the input folder"
    }
  ]
}
